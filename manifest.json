{
  "manifest_version": 3,
  "name": "Join Immersive",
  "version": "1.1",
  "description": "Read German easily as you browse the internet with Immersive Language Learning",
  "permissions": ["storage", "activeTab", "scripting", "contextMenus", "tabs"],
  "host_permissions": [
    "https://immersive-server.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "default_icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pngs/*.png", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "default_icon.png",
    "48": "default_icon.png",
    "128": "default_icon.png"
  }
}
