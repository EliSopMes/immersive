{
  "name": "Immersive",
  "description": "Translate or simplify selected German text",
  "version": "1.0",
  "icons": {
    "16": "default_icon.png",
    "48": "default_icon.png",
    "128": "default_icon.png"
  },
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["pngs/*.png", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "default_icon.png",
      "48": "default_icon.png",
      "128": "default_icon.png"
    }
  }
}
